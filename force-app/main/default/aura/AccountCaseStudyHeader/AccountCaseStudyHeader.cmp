<aura:component implements="flexipage:availableForAllPageTypes" access="global" controller="AccountController">
	<aura:registerEvent name="searchEvent" type="c:searchAccountEvent"/>
    <aura:attribute name="showModal" type="boolean" default="false"/>
    <aura:attribute name="isAlreadySet" type="boolean" default="false" />
    <aura:attribute name="industryOptions" type="List"/>
    <aura:attribute name="typeOptions" type="List"/>

    <div class="slds-card__header slds-grid">
        <header class="slds-media slds-media_center slds-has-flexi-truncate slds-wrap">
            <div class="slds-col slds-size_1-of-2">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-standard-account" title="account">
                        <lightning:icon iconName="standard:account" alternativeText="Account" title="Account" />
                        <span class="slds-assistive-text">account</span>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <a href="#" class="slds-card__header-link slds-truncate" title="Accounts">
                            <span>Accounts</span>
                        </a>
                    </h2>
                </div>
            </div>
            <div class="slds-col slds-size_1-of-2 justify-content-end">
                <div onkeyup="{! c.handleKeyUp }">
                    <lightning:input
                                     aura:id="enter-search"
                                     name="enter-search"
                                     placeholder="Search"
                                     type="search"
                                     />
                </div>
                <lightning:button
                          variant="brand"
                          label="New Account"
                          title="New Account"
                          disabled="false"
                          onclick="{!c.showModal}" />
                <c:CreateAccountModal
                    industryOptions="{!v.industryOptions}"
                    typeOptions="{!v.typeOptions}"
                    showModal="{!v.showModal}"
                    aura:id="createModalComponent"
                />
            </div>
        </header>
    </div>
</aura:component>